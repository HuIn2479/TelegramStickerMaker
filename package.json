{
  "name": "telegram-sticker-maker",
  "version": "2.0.0",
  "type": "module",
  "description": "Telegram 贴纸制作工具 - 使用 Vue 3 + Vite 构建",
  "author": "HuIn2479",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node server.js",
    "dev:client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "docker:build": "docker build -t telegram-sticker-maker .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "fluent-ffmpeg": "^2.1.2",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^6.0.0",
    "concurrently": "^8.2.0"
  }
}
