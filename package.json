{
  "name": "telegram-sticker-maker",
  "version": "2.0.0",
  "type": "module",
  "description": "Telegram 贴纸制作工具 - 使用 Vue 3 + Vite 构建",
  "author": "HuIn2479",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cross-env NODE_ENV=development node server.js",
    "dev:client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=production node server.js",
    "clean": "node -e \"const fs=require('fs');const path=require('path');['uploads','output'].forEach(d=>{const dir=path.join(__dirname,d);if(fs.existsSync(dir)){fs.readdirSync(dir).forEach(f=>{const p=path.join(dir,f);if(f!=='.gitkeep')fs.unlinkSync(p)})}})\""
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "multer": "^2.0.2",
    "sharp": "^0.34.5",
    "vue": "^3.4.0",
    "vue-i18n": "^9.14.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "vite": "^6.0.0"
  }
}
