{
  "name": "telegram-sticker-maker",
  "version": "2.0.0",
  "type": "module",
  "description": "Telegram 贴纸制作工具 - 使用 Vue 3 + Vite 构建",
  "author": "HuIn2479",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cross-env NODE_ENV=development node server.js",
    "dev:client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=production node server.js",
    "clean": "node -e \"const fs=require('fs');const path=require('path');['uploads','output'].forEach(d=>{const dir=path.join(__dirname,d);if(fs.existsSync(dir)){fs.readdirSync(dir).forEach(f=>{const p=path.join(dir,f);if(f!=='.gitkeep')fs.unlinkSync(p)})}})\"",
    "lint": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,vue,css}\" \"server/**/*.js\" \"*.js\""
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "express": "^5.2.1",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.5",
    "multer": "^2.0.2",
    "sharp": "^0.34.5",
    "vue": "^3.4.0",
    "vue-i18n": "^11.2.2",
    "weui": "^2.6.25",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "prettier": "^3.4.2",
    "vite": "^7.2.6"
  }
}
