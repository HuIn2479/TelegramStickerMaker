{
  "name": "telegram-sticker-maker",
  "version": "2.0.0",
  "type": "module",
  "description": "Telegram 贴纸制作工具 - 使用 Vue 3 + Vite 构建",
  "author": "HuIn2479",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cross-env NODE_ENV=development node server.js",
    "dev:client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=production node server.js",
    "lint": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,vue,css}\" \"server/**/*.js\" \"*.js\""
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "express": "^5.2.1",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.5",
    "multer": "^2.0.2",
    "sharp": "^0.34.5",
    "vue": "^3.5.26",
    "vue-i18n": "^11.2.8",
    "weui": "^2.6.25",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vitejs/plugin-vue": "^6.0.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-vue": "^10.6.2",
    "prettier": "^3.8.0",
    "vite": "^7.3.0"
  }
}
